{
  "compilerOptions": {
    "types": [
      "jest",
      "node",
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "public",
  },
  "include": [
    "**/*.ts",
    "swagger/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}